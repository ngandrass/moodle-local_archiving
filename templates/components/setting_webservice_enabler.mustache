{{!
    @template local_archiving/components/setting_webservice_enabler

    Admin setting webservice enabler template.

    Example context (json):
    {
        "title": "Setting title",
        "description": "Description goes here",
        "webservicesenabled": true,
        "webserviceprotocolrestenabled": false,
        "webserviceenableurl": "http://my.moodle.com/the_url_to_enable_webservices",
        "webserviceprotocolenableurl": "http://my.moodle.com/the_url_to_enable_rest_protocol"
    }
}}
{{!
    Setting webservice enabler.
}}
<div class="form-item row">
    <div class="form-label col-sm-3 text-sm-end">
        <label>
            {{{title}}}
        </label>
    </div>
    <div class="form-setting col-sm-9">
        <div class="form-description">{{{description}}}</div>
        <ul class="list-group mt-2 mb-4 d-inline-flex">
            <li class="list-group-item d-flex justify-content-between align-items-center {{^webservicesenabled}} list-group-item-danger {{/webservicesenabled}}">
                {{#webservicesenabled}}
                    <span>
                        <i class="fa-solid fa-square-check text-success fa-xl"></i>&nbsp;
                        {{#str}} web_services_are_enabled, local_archiving {{/str}}
                    </span>
                {{/webservicesenabled}}
                {{^webservicesenabled}}
                    <span>
                        <i class="fa-solid fa-square-xmark text-danger fa-xl"></i>&nbsp;
                        {{#str}} web_services_are_disabled, local_archiving {{/str}}
                        Web services are disabled
                    </span>
                    <span>
                        <a href="{{{webserviceenableurl}}}" target="_blank" role="button" class="btn btn-primary ms-5">
                            {{#str}} enable_now, local_archiving {{/str}}
                        </a>
                    </span>
                {{/webservicesenabled}}
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center {{^webserviceprotocolrestenabled}} list-group-item-danger {{/webserviceprotocolrestenabled}}">
                {{#webserviceprotocolrestenabled}}
                    <span>
                        <i class="fa-solid fa-square-check text-success fa-xl"></i>&nbsp;
                        {{#str}} web_service_rest_protocol_is_enabled, local_archiving {{/str}}
                    </span>
                {{/webserviceprotocolrestenabled}}
                {{^webserviceprotocolrestenabled}}
                    <span>
                        <i class="fa-solid fa-square-xmark text-danger fa-xl"></i>&nbsp;
                        {{#str}} web_service_rest_protocol_is_disabled, local_archiving {{/str}}
                    </span>
                    <span>
                        <a href="{{{webserviceprotocolenableurl}}}" target="_blank" role="button" class="btn btn-primary ms-5">
                            {{#str}} enable_now, local_archiving {{/str}}
                        </a>
                    </span>
                {{/webserviceprotocolrestenabled}}
            </li>
        </ul>
    </div>
</div>
