{{!
    @template local_archiving/components/refresh_button

    Refresh button component to be placed in Moodle tables.

    Example context (json):
    {
        "lastupdated": 1747836796,
        "refreshurl": "https://example.com/local/foo/index.php"
    }
}}


<div class="d-flex">
    <div class="flex-grow-1 align-self-center text-right small">
        {{#str}} last_updated, local_archiving {{/str}}:
        {{#userdate}} {{lastupdated}}, %T {{/userdate}}
    </div>
    <div class="flex-grow-0">
        <a
            href="{{{refreshurl}}}"
            class="h3 mx-2"
            title="{{#str}} refresh, moodle {{/str}}"
            data-toggle="tooltip"
            data-placement="top"
            data-bs-toggle="tooltip"
            data-bs-placement="top"
        >
            <i class="fa fa-rotate-right"></i>
        </a>
    </div>
</div>